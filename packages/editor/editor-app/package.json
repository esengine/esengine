{
  "name": "@esengine/editor-app",
  "version": "1.0.14",
  "description": "ESEngine Editor Application - Cross-platform desktop editor with egui",
  "type": "module",
  "private": true,
  "scripts": {
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "sync:ccesengine": "node scripts/sync-ccesengine.mjs",
    "build:ccesengine": "node scripts/sync-ccesengine.mjs --build",
    "build:viewport": "pnpm --filter @esengine/editor-viewport build",
    "dev": "pnpm build:viewport && pnpm tauri:dev",
    "build": "pnpm build:viewport && pnpm tauri:build",
    "version": "node scripts/sync-version.js && git add src-tauri/tauri.conf.json"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.2.0"
  }
}
